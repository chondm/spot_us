- div_for job do
  .box_yellow
    .work_delete= link_to_remote content_tag(:span, "Delete", :class => "ss_sprite ss_delete"), :url => [:myspot, :profile, job], :method => :delete
    - if !job.url.blank?
      .work_row
        %span.ss_sprite.ss_newspaper
        %span.work_title=link_to job.title, job.url
    - else
      .work_row
        %span.ss_sprite.ss_newspaper
        %span.work_title=job.title
    %br/
    - unless job.description.blank?
      %br/
      .double_content_border
      .work_description= job.description


  


