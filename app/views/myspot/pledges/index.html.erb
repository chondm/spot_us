<% @title = "Spot.us - Member Dashboard" %>

<div id="myspot_dashboard">
   <%= render :partial => "myspot/nav", :locals => {:selected_tab => "dashboard"} %>
   <div id="profile_container">
      <%= render :partial => "myspot/dashboard_nav", :locals => {:selected_tab => "pledges"} %>
      <div id="dashboard_content">     
        <table class="pledges">
          <tr>
            <th class="pitch_header">Tip</th>
            <th class="pledged_header">Pledged</th>
            <th class="amount_header">Amount</th>
            <th class="status_header">Status</th>
            <th class="actions_header">Actions</th>
          </tr>
          <tr>
            <td colspan=5>
               <%= render :partial => "myspot/pledges/pledge", :collection => @pledges, :spacer_template => "myspot/pledges/pledge_spacer" %>
            </td>
          </tr>
        </table>
        <%= will_paginate @pledges %>
      </div>
   </div>
</div>

