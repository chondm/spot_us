!!!
%html
  %head
    %meta{ :name => "keywords",    :content => "Keywords" }/
    %meta{ :name => "description", :content => "Description" }/

    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-type" }/

    %title
      = @title || "Spot.us"

    = stylesheet_link_tag 'admin', :media => "screen"
    = stylesheet_link_tag 'screen', :media => "screen"
    =# stylesheet_link_tag 'hashrocket', :media => "screen"
    = stylesheet_link_tag 'print', :media => "print"
    /[if IE 6]
      = stylesheet_link_tag 'ie'
    = javascript_include_tag 'ckeditor/ckeditor.js'

    = javascript_include_tag 'jquery-1.3.1.min.js'
    = javascript_include_tag 'jquery-ui.js'
    = javascript_include_tag 'jrails.js'
    = javascript_include_tag 'jquery.cookie.js'
    = javascript_include_tag 'jquery.scrollTo-1.3.3.js'
    = javascript_include_tag 'jquery.localscroll-1.2.5.js'
    = javascript_include_tag 'jquery.serialScroll-1.2.1.js'
    = javascript_include_tag 'jquery.pngFix.js'
    = javascript_include_tag 'jquery.equalHeights.js'
    =# javascript_include_tag 'application'
    = javascript_include_tag 'admin'

    = javascript_include_tag 'jcarousellite_1.0.1'
    = stylesheet_link_tag 'facebox'
    = javascript_include_tag 'facebox'
    = yield :head
  %body
    .body-content
      .container
        - if flash.any?
          #flash
            - flash.each do |key, value|
              %div{ :id => "flash_#{key}", :class => key }
                = value
        = yield
    #footer
