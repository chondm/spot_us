@posts.each { |post|
  xml.url{
      apply_fragment ['newb_sitemap_post_', post, @prefix_template] do
        xml << render (:partial=>"#{@prefix_template}url", 
          :locals=>{ 
              :title => post.title,
              :url=>pitch_post_path(post.pitch, post, {:only_path=>false}), 
              :item_date=>post.updated_at, 
              :priority=>0.8 
          })
      end
  }
}