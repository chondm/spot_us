@pitches.each { |pitch|
  xml.url{
      apply_fragment ['newb_sitemap_pitch_', pitch, @prefix_template] do
        xml << render (:partial=>"#{@prefix_template}url", 
          :locals=>{ 
              :title => pitch.headline,
              :url=>pitch_path(pitch, {:only_path=>false}), 
              :item_date=>pitch.updated_at, 
              :priority=>0.8 
          })
      end
  }
}